<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/login_background">

    <!-- Back Button -->
    <Button
        android:id="@+id/back_button_social"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="16dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/social_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Social Features"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <!-- Description of Social Features -->
    <TextView
        android:id="@+id/social_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share your fitness achievements, compete with friends, and post updates!"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_below="@id/social_title"
        android:layout_marginTop="20dp" />

    <!-- Button to Share Fitness Achievement -->
    <Button
        android:id="@+id/share_achievement_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share My Achievement"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:layout_below="@id/social_description"
        android:layout_marginTop="30dp" />

    <!-- Button to Compete in Challenges -->
    <Button
        android:id="@+id/compete_challenge_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Compete in Challenges"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:layout_below="@id/share_achievement_button"
        android:layout_marginTop="20dp" />

    <!-- One-Button Social Media Share -->
    <Button
        android:id="@+id/share_to_social_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Post to Social Media"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:layout_below="@id/compete_challenge_button"
        android:layout_marginTop="20dp" />

</RelativeLayout>
