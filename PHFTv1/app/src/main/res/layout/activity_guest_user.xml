<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#fce8e8">

    <TextView
        android:id="@+id/guestWelcomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, Guest!"
        android:textSize="24sp"
        android:textColor="#000000"
        android:paddingBottom="16dp" />
    <TextView
        android:id="@+id/welcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explore our app features and learn how we can help you on your health and fitness journey."
        android:textSize="16sp"
        android:textColor="#000000"
        android:gravity="center"
        android:paddingBottom="24dp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"  />
    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"  />
    <!--        android:onClick="onGeneralUserLoginClick"-->


    <Button
        android:id="@+id/btnContinueAsGuest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue as Guest"
        android:paddingTop="16dp"  />
    <!--        android:onClick="onGuestUserClick"-->



</LinearLayout>
