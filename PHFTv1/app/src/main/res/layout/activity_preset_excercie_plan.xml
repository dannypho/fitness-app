<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <!-- Back Button -->
    <Button
        android:id="@+id/Pre_btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:backgroundTint="@color/green"
        android:text="Back"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- ScrollView to enable scrolling -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/Pre_btn_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Container for the scrollable content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exercise Plans"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginBottom="16dp" />

            <!-- Exercise Plan 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_plan1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="8dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/jetBlack"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/exercise_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Beginner Strength Training"
                        android:textColor="@color/green"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/exercise_description1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A simple strength training plan that includes squats, push-ups, and dumbbell exercises. Designed for beginners to build foundational strength and endurance."
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <ImageView
                        android:id="@+id/exercise_image1"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/strength_training" />

<!--                    <Button-->
<!--                        android:id="@+id/btn_start_plan1"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="Start Plan"-->
<!--                        android:textColor="@color/white"-->
<!--                        android:backgroundTint="@color/green"-->
<!--                        android:layout_gravity="end" />-->
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Exercise Plan 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_plan2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="8dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/jetBlack"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/exercise_title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Cardio and Weight Loss"
                        android:textColor="@color/green"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/exercise_description2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A cardio-focused plan with running, cycling, and HIIT workouts. Perfect for individuals looking to improve cardiovascular health and burn calories."
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <ImageView
                        android:id="@+id/exercise_image2"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cardio_workout" />

<!--                    <Button-->
<!--                        android:id="@+id/btn_start_plan2"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="Start Plan"-->
<!--                        android:textColor="@color/white"-->
<!--                        android:backgroundTint="@color/green"-->
<!--                        android:layout_gravity="end" />-->
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Exercise Plan 3 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_plan3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="8dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/jetBlack"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/exercise_title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Running"
                        android:textColor="@color/green"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/exercise_description3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Boost your stamina and endurance with this running plan designed for all fitness levels. Includes interval training, tempo runs, and long-distance jogging to improve cardiovascular health."
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <ImageView
                        android:id="@+id/exercise_image3"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/running" />

                    <!--                    <Button-->
                    <!--                        android:id="@+id/btn_start_plan3"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:text="Start Plan"-->
                    <!--                        android:textColor="@color/white"-->
                    <!--                        android:backgroundTint="@color/green"-->
                    <!--                        android:layout_gravity="end" />-->
                </LinearLayout>
            </androidx.cardview.widget.CardView>



            <!-- Exercise Plan 4 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_plan4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="8dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/jetBlack"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/exercise_title4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Cycling"
                        android:textColor="@color/green"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/exercise_description4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pedal your way to better fitness with a cycling plan that combines endurance rides, hill climbs, and sprints. Perfect for toning muscles and burning calories while exploring the outdoors."
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <ImageView
                        android:id="@+id/exercise_image4"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/cycling" />

                    <!--                    <Button-->
                    <!--                        android:id="@+id/btn_start_plan4"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:text="Start Plan"-->
                    <!--                        android:textColor="@color/white"-->
                    <!--                        android:backgroundTint="@color/green"-->
                    <!--                        android:layout_gravity="end" />-->
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <!-- Exercise Plan 5 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_plan5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="8dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/jetBlack"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/exercise_title5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="High-Intensity Interval Training (HIIT)"
                        android:textColor="@color/green"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/exercise_description5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Get maximum results in less time with a HIIT plan that alternates short bursts of intense activity with recovery periods. Ideal for fat burning, muscle building, and improving endurance."
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <ImageView
                        android:id="@+id/exercise_image5"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/hilt" />

                    <!--                    <Button-->
                    <!--                        android:id="@+id/btn_start_plan4"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:text="Start Plan"-->
                    <!--                        android:textColor="@color/white"-->
                    <!--                        android:backgroundTint="@color/green"-->
                    <!--                        android:layout_gravity="end" />-->
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Exercise Plan 6 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_plan6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:elevation="8dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/jetBlack"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/exercise_title6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Weightlifting"
                        android:textColor="@color/green"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/exercise_description6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Build strength and tone your muscles with this weightlifting plan. Includes compound lifts, isolation exercises, and progression strategies tailored to your fitness goals."
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <ImageView
                        android:id="@+id/exercise_image6"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginBottom="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/weightlifting" />

                    <!--                    <Button-->
                    <!--                        android:id="@+id/btn_start_plan4"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:text="Start Plan"-->
                    <!--                        android:textColor="@color/white"-->
                    <!--                        android:backgroundTint="@color/green"-->
                    <!--                        android:layout_gravity="end" />-->
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
