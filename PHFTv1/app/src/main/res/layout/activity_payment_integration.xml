<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/login_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Back Button -->
        <Button
            android:id="@+id/back_button_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/payment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment "
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp" />

        <!-- Description of Purchase Options -->
        <TextView
            android:id="@+id/purchase_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose your payment method to purchase a workout plan or hire a trainer"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_below="@id/payment_title"
            android:layout_marginTop="20dp" />

        <!-- Workout Plan Purchase Button -->
        <Button
            android:id="@+id/workout_plan_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Purchase Workout Plan - $29.99"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:layout_below="@id/purchase_description"
            android:layout_marginTop="30dp" />

        <!-- Trainer Hire Button -->
        <Button
            android:id="@+id/trainer_hire_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hire Virtual Trainer - $49.99"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:layout_below="@id/workout_plan_button"
            android:layout_marginTop="20dp" />

        <!-- Subscription Button (Moved) -->
        <Button
            android:id="@+id/subscription_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subscription"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:layout_below="@id/trainer_hire_button"
            android:layout_marginTop="20dp" />

        <!-- Payment Method Title -->
        <TextView
            android:id="@+id/payment_method_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Payment Method"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_below="@id/subscription_button"
            android:layout_marginTop="40dp" />

        <!-- Debit/Credit Card Payment Button -->
        <Button
            android:id="@+id/card_payment_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pay with Debit/Credit Card"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:layout_below="@id/payment_method_title"
            android:layout_marginTop="20dp" />

        <!-- PayPal Payment Button -->
        <Button
            android:id="@+id/paypal_payment_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pay with PayPal"
            android:backgroundTint="@color/black"
            android:textColor="@color/white"
            android:layout_below="@id/card_payment_button"
            android:layout_marginTop="20dp" />
    </RelativeLayout>
</ScrollView>